.content{
  background-color: #F0F0F0;
  height: auto;
  
}
.bg{
  width:100%;
  height: auto;
  background-color: #ffffff;
}
.head{
  width: 100%;
  height: auto;
}
.headIcon{
  height: 60px;
  width:60px;
  margin: 15px auto;
  border-radius:50%;

}
.login{
  color: #000000;
  font-size: 15px;
  font-weight: bold;  
  height: 30px;
  width: 100%;
  margin: 0 auto;
  text-align: center;
  padding-bottom: 5px; 

}
.account{
  color: #000000;
  font-size: 12px;
  margin-top:10px;
}
.item{
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
}
.hr{
  width: 100%;
  height: 15px;
}

.img{
  margin-left: 10px;
  line-height: 40px;
  padding-top:9px; 

}
.name{
  padding-top:10px;
  padding-left: 10px;
  padding-bottom: 15px;
  font-size: 15px;
}
.detail{
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 40px;
  line-height: 50px;
  color: #888888;
}
.line{
  border:1px solid #F0F0F0;
  opacity: 1;
}
.count{
  font-size: 13px;
  color: #ff0000;
}

 